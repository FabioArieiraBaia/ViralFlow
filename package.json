{
  "name": "viral-flow-desktop",
  "version": "2.1.0",
  "description": "Viral Video Generator using Gemini 2.5",
  "main": "electron-main.js",
  "author": {
    "name": "ViralFlow Team",
    "email": "support@viralflow.ai"
  },
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "electron": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder --win --x64"
  },
  "build": {
    "appId": "com.viralflow.ai",
    "productName": "ViralFlow AI",
    "files": [
      "build/**/*",
      "electron-main.js",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/favicon.ico",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ViralFlow AI"
    }
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "lucide-react": "^0.554.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  }
}